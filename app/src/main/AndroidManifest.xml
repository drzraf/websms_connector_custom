<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="de.ub0r.android.websms.connector.custom">

    <supports-screens
            android:anyDensity="true"
            android:largeScreens="true"
            android:normalScreens="true"
            android:smallScreens="true"
            android:xlargeScreens="true"/>

    <uses-feature
            android:name="android.hardware.touchscreen"
            android:required="false"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- WAKE_LOCK needed to make sure, sms are send even if user sends device to sleep. -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
            android:hardwareAccelerated="false"
            android:icon="@drawable/icon"
            android:label="@string/app_name">

        <!--
			This Activity is brought by the WebSMS Connector Plugin API. It shows
			a simple information about this connector when launching it via
			"open" button from android market.
        -->
        <activity
                android:name="de.ub0r.android.websms.connector.common.InfoActivity"
                android:icon="@drawable/icon"
                android:label="@string/app_name"
                android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.INFO"/>
            </intent-filter>
        </activity>

        <!-- Service doing all the IO. -->
        <service
                android:name="de.ub0r.android.websms.connector.common.ConnectorService"
                android:exported="false"/>

        <activity android:name="Preferences">
            <intent-filter>
                <action android:name="de.ub0r.android.websms.connector.custom.PREFS"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <receiver
                android:name="de.ub0r.android.websms.connector.custom.ConnectorCustom"
                android:enabled="true"
                android:exported="true">
            <intent-filter>
                <action android:name="de.ub0r.android.websms.connector.custom.RUN_UPDATE"/>
                <action android:name="de.ub0r.android.websms.connector.custom.RUN_SEND"/>
                <action android:name="de.ub0r.android.websms.connector.UPDATE"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
